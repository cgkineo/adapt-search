                            "legend": "Search",
                            "properties": {
                                "_isEnabled": {
                                    "type": "boolean",
                                    "required": true,
                                    "default": true,
                                    "title": "Enable search",
                                    "inputType": "Checkbox",
                                    "validators": [],
                                    "help": ""
                                },
                                "keywords": {
                                    "type": "string",
                                    "default": "",
                                    "required": false,
                                    "title": "Keywords",
                                    "inputType": "Text",
                                    "validators": []
                                }
                            }
                        }
                    }
                },
                "component": {
                    "type": "object",
                    "properties": {
                        "_search": {
                            "type": "object",
                            "required": false,
                            "legend": "Search",
                            "properties": {
                                "_isEnabled": {
                                    "type": "boolean",
                                    "required": true,
                                    "default": true,
